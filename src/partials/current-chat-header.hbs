<div class="messenger__current-chat-header">
  <img
    class="messenger__current-chat-avatar"
    width="34"
    height="34"
    src={{currentMessage.avatar}}
    alt={{currentMessage.first_name}}
  />
  <p
    class="messenger__current-chat-name text text__caption text_primary text_bold"
  >{{currentMessage.title}}</p>
  <div class="messenger__current-chat-user-options-container">
    <button class="messenger__current-chat-options-button"><svg
        xmlns="http://www.w3.org/2000/svg"
        width="3"
        height="16"
        viewBox="0 0 3 16"
        fill="none"
      >
        <circle cx="1.5" cy="2" r="1.5" fill="#1E1E1E" />
        <circle cx="1.5" cy="8" r="1.5" fill="#1E1E1E" />
        <circle cx="1.5" cy="14" r="1.5" fill="#1E1E1E" />
      </svg></button>
    <div class="messenger__current-chat-user-options">
      <button
        class="messenger__current-chat-user-option-button text text__caption text_primary"
      ><svg
          class="messenger__current-chat-user-option-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 22 22"
          fill="none"
        >
          <circle
            cx="11"
            cy="11"
            r="10.25"
            stroke="#3369F3"
            stroke-width="1.5"
          />
          <line
            x1="10.9999"
            y1="5.5"
            x2="10.9999"
            y2="16.5"
            stroke="#3369F3"
            stroke-width="1.5"
          />
          <line
            x1="5.49988"
            y1="11"
            x2="16.4999"
            y2="11"
            stroke="#3369F3"
            stroke-width="1.5"
          />
        </svg>
        Добавить пользователя</button>
      <button
        class="messenger__current-chat-user-option-button text text__caption text_primary"
      ><svg
          class="messenger__current-chat-user-option-icon"
          xmlns="http://www.w3.org/2000/svg"
          width="22"
          height="22"
          viewBox="0 0 22 22"
          fill="none"
        >
          <circle
            cx="11"
            cy="11"
            r="10.25"
            stroke="#3369F3"
            stroke-width="1.5"
          />
          <line
            x1="7.11077"
            y1="7.11103"
            x2="14.8889"
            y2="14.8892"
            stroke="#3369F3"
            stroke-width="1.5"
          />
          <line
            x1="7.11078"
            y1="14.8891"
            x2="14.889"
            y2="7.11093"
            stroke="#3369F3"
            stroke-width="1.5"
          />
        </svg>Удалить пользователя</button>
    </div>
  </div>
</div>

<link rel="stylesheet" href="../styles/messenger.css" />
